<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <include layout="@layout/layout_title_friend_list"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#fff"
            android:paddingBottom="5dp">
            <TextView
                android:id="@+id/tv_search_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="46dp"
                android:singleLine="true"
                android:text="VO号/手机号"
                android:textColor="#C5C5C5"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/head_search" />
            <View
                android:id="@+id/flag"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/mainColor"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_phoneContacts"
            android:layout_below="@+id/flag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/backgroundColor">
                </android.support.v7.widget.RecyclerView>
                <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal|top">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <!--微信邀请好友-->
                            <LinearLayout
                                android:id="@+id/wx_share_ll"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_weight="1">
                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:id="@+id/wx_icon"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@mipmap/wx_icon"
                                    />
                                <TextView
                                    android:layout_centerHorizontal="true"
                                    android:layout_below="@+id/wx_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_height="wrap_content"
                                    android:text="添加微信好友"
                                    android:textSize="18sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>

                <com.mcxtzhang.indexlib.IndexBar.widget.IndexBar
                    app:indexBarPressBackground="@color/partTranslucent"
                    android:id="@+id/indexBar"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    app:indexBarTextSize="16sp"/>
                <TextView
                    android:id="@+id/tvSideBarHint"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_side_bar"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="48sp"
                    android:visibility="gone"
                    tools:text="A"
                    tools:visibility="visible"
                    />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>