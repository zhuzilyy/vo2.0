<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <RelativeLayout
        android:id="@+id/rl_function"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_yaoyiyao"
            android:text="功能介绍"
            android:textColor="#353535"
            android:textSize="16sp"
            android:id="@+id/textView7" />

        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/iv_yaoyiyao"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/function"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
    </RelativeLayout>
    <View
        android:id="@+id/flag01"
        android:layout_below="@+id/re_function"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/common_line" />

    <!--关于vo-->
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="12dp">

        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/iv_aboutvo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/feedback" />
        <TextView
            android:id="@+id/aboutTvVo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/iv_aboutvo"
            android:text="反馈"
            android:textColor="#353535"/>
    </RelativeLayout>

</LinearLayout>