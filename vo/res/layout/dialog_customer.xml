<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corner"
        >
        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <!--title-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/tv_dialogTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="删除加密好友"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/tipcolor"
                        android:layout_centerInParent="true"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_cancel"
                        android:layout_width="40dp"
                        android:text="close"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_dialog_corner"
                        >
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/dialog_close"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/cancel_iv"
                            />

                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layerType="software"
                    />
                <TextView
                    android:id="@+id/tv_dialogContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="您确认删除所有加密好友吗（删除后不可恢复）"
                    android:textColor="@color/tipcolor"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tv_dialog_confrim"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="确定"
                    android:background="@drawable/shape_customer_dialog"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>